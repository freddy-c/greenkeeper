generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id             String       @id @default(uuid())
  name           String
  manufacturer   Manufacturer @relation(fields: [manufacturerId], references: [id])
  manufacturerId String
}

model Manufacturer {
  id       String    @id @default(uuid())
  name     String
  products Product[]
}
